{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "./lib",
    "noImplicitAny": false,
    "importHelpers": true,
    "types": ["node"],
  },
  "include": [
    "src/index.ts",
    "src/atoms/**/*.ts",
    "src/atoms/**/*.tsx",
    "src/molecules/**/*.ts",
    "src/molecules/**/*.tsx",
    "src/organisms/**/*.ts",
    "src/organisms/**/*.tsx",
    "src/common/*",
    "src/components/*",
    "src/utils/*",
    "src/styles/*", 
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/_test.ts",
    "**/_test.tsx",
    "**/stories.ts",
    "**/stories.tsx",
    "src/organisms/DataTable/_test-row-actions.e2e.ts",
  ],
  "types": ["vitest/globals", "node"]
}
