{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@atoms/*": ["src/atoms/*"],
      "@molecules/*": ["src/molecules/*"],
      "@organisms/*": ["src/organisms/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["src/common/*"],
      "@styles/*": ["src/styles/*"]
    },

    "rootDir": "src",        // Ensure source files stay inside "src/"
    "outDir": "dist",        // Output compiled files into "dist/"
    "noEmit": false,         // Ensure TypeScript actually emits files
    "allowJs": false         // Prevents JS files from being copied to "dist/"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "types": ["vitest/globals", "node"]
}
