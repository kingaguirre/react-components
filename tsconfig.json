{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "src/global.d.ts",
    "src/index.ts",
    "src/atoms/**/*.ts",
    "src/atoms/**/*.tsx",
    "src/molecules/**/*.ts",
    "src/molecules/**/*.tsx",
    "src/organisms/**/*.ts",
    "src/organisms/**/*.tsx",
    "src/common/*",
    "src/components/*",
    "src/utils/*",
    "src/styles/*",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/_test.ts",
    "**/_test.tsx",
    "**/stories.ts",
    "**/stories.tsx",
    "src/organisms/DataTable/_test-row-actions.e2e.ts",
    "**/stories/**",
    "**/__tests__/**",
    "**/Playground/**",
    "src/organisms/FormRenderer/data.tsx"
  ],
}
